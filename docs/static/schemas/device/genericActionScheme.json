{
    "type": "object",
    "properties": {
        "InteractionType": {
            "type": "string",
            "enum": [
                "Generic_Action"
            ]
        },
        "name": {
            "type": "string"
        },
        "inputData": {
            "type": "object",
            "properties": {
                "valueType": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 2,
                    "maxItems": 2,
                    "contains": {
                        "enum": [
                            "PrimitiveType",
                            "String"
                        ]
                    }
                },
                "unitOfMeasure": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "type": {
                    "type": "object",
                    "properties": {
                        "String": {
                            "type": "object",
                            "properties": {
                                "Options": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    },
                                    "minItems": 1,
                                    "uniqueItems": true
                                }
                            },
                            "required": [
                                "Options"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "required": [
                        "String"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "valueType",
                "unitOfMeasure",
                "type"
            ],
            "additionalProperties": false
        },
        "currentState": {
            "type": "object",
            "properties": {
                "visible": {
                    "oneOf": [
                        {
                            "type": "boolean",
                            "description": "For Generic_Action: true = status shown + interactive control available, false = interactive control hidden (status always shown)"
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "value": {
                                        "type": ["string", "number", "boolean"]
                                    }
                                },
                                "required": ["name", "value"],
                                "additionalProperties": false
                            },
                            "description": "For Generic_Action: conditions determine if interactive control is available (status always shown)"
                        }
                    ]
                },
                "value": {
                    "type": "string"
                }
            },
            "required": [
                "visible",
                "value"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "InteractionType",
        "name",
        "inputData",
        "currentState"
    ],
    "additionalProperties": false
}
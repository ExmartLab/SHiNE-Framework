{
    "title": "Time Precondition",
    "description": "A precondition that checks if the time is within a certain range",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "Time"
            ]
        },
        "condition": {
            "type": "object",
            "properties": {
                "operator": {
                    "type": "string",
                    "enum": ["<=", ">", "<", ">=", "==", "!="],
                    "description": "The operator to use for comparison"
                },
                "value": {
                    "type": "string",
                    "description": "The time value (HH:MM) to compare the time variable against, in 24-hour format. For example, '14:30'."
                }
            },
            "required": [
                "variable",
                "operator",
                "value"
            ]
        }
    },
    "required": [
        "type",
        "condition"
    ]
}